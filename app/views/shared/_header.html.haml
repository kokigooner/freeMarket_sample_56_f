%header.mpcheader.visible-pc 
  %div.mpcheader-inner
    %div.mpcheader-top
      %h1
        = link_to image_tag("logo.svg", width: '134',hight: "36", alt: "サンプル画像"), root_path
      = search_form_for(@q, url:products_search_path,class:"mpcheader-form") do |f|
        = f.search_field :product_name_cont_all,class:"input-default"
        = f.button "", class:"fas fa-search fa-2x"
    %div.mpcheader-nav-box.clearfix
      %dev.large-left
        %ul.mpcheader-nav
          %li
            %h2
              %a.fas.fa-list.fa-lg
              カテゴリーから探す
          %li
            %h2
              %a.fas.fa-tag.fa-lg
              %span
                ブランドから探す
      %div.large-right
        - if user_signed_in?
          %ul.mpcheader-user-nav
            %li.liked-items-link
              %a.mpcheader-menu-link{ "data-id": "mpcheader-user-nav" }
                .mpcheader-menu-icon
                  %i.far.fa-heart
                %span
                  良いね！一覧
                %ul.mpcheader-user-box.mpcheader-notification-box.mypage-item-list
            %li
              %a.mpcheader-menu-link
                .mpcheader-menu-icon
                  %i.far.fa-bell
                %span
                  お知らせ
                %ul.mpcheader-user-box.mpcheader-notification-box.mypage-item-list
            %li
              %a.mpcheader-menu-link
                .mpcheader-menu-icon
                  %i.fas.fa-check
                %span
                  やることリスト
                %ul.mpcheader-user-box.mpcheader-notification-box.mypage-item-list
            %li
              = link_to "/users/mypage",class:"mpcheader-menu-link" do
                %div
                  = image_tag "member.png", class: "mpcheader-menu-mypage-img"
                %span
                  マイページ
        - else
          %ul.mpcheader-user-btn
            %li.mpcheader-user-signin
              = link_to "新規会員登録", new_user_path, class: "mpcheader-user-red"
            %li.mpcheader-user-login
              = link_to "ログイン",  users_login_path
