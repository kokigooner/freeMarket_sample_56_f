%header.mpcheader.visible-pc 
  .mpcheader-inner
    .mpcheader-top
      %h1
        = link_to(image_tag("logo.svg",
          width: '134', 
          height: "36",
          alt: "サンプル画像"),
          root_path)
      = form_for :item ,html:{ class: "mpcheader-form"}  do |f|
        = f.text_field "keyword", class: "input-default",placeholder: '何をお探しですか？'
        %div.icon-search
          = f.button :submit do 
            %i.fas.fa-search.fa-lg
    .mpcheader-nav-box.clearfix
      %ul.mpcheader-nav
        %li.mpcheader-nav-list
          %h2
            .category-search.first-show
              %span#category-search
                %a.fas.fa-list.fa-lg
                カテゴリーから探す
          %ul.category-first__wrapper.first-show
            - @categories.each_with_index do |first_category, idx1|
              %li.category-first
                %h5
                  = link_to("#{first_category.first_category}",
                    root_path)
                %ul.category-second__wrapper{class: "cs-#{idx1}"}
                  - first_category.second_categories.each_with_index do |second_category, idx2|
                    %li.category-second
                      = link_to("#{second_category.second_category}",
                        root_path)
                      %ul.category-third__wrapper{class: "ct-#{idx2}"}
                        - second_category.third_categories.each do |third_category|
                          %li.category-third
                            = link_to("#{third_category.third_category}",
                              root_path)
        %li
          %h2
            %span.brand-search
              %a.fas.fa-tag.fa-lg
              ブランドから探す
      .large-right
        - if user_signed_in?
          %ul.mpcheader-user-nav
            %li.liked-items-link
              %a.mpcheader-menu-link{ "data-id": "mpcheader-user-nav" }
                .mpcheader-menu-icon
                  %i.far.fa-heart
                %span
                  良いね！一覧
                %ul.mpcheader-user-box.mpcheader-notification-box.mypage-item-list
            %li
              %a.mpcheader-menu-link
                .mpcheader-menu-icon
                  %i.far.fa-bell
                %span
                  お知らせ
                %ul.mpcheader-user-box.mpcheader-notification-box.mypage-item-list
            %li
              %a.mpcheader-menu-link
                .mpcheader-menu-icon
                  %i.fas.fa-check
                %span
                  やることリスト
                %ul.mpcheader-user-box.mpcheader-notification-box.mypage-item-list
            %li
              = link_to "/users/mypage",class:"mpcheader-menu-link" do
                %div
                  = image_tag "member.png", class: "mpcheader-menu-mypage-img"
                %span
                  マイページ
        - else
          %ul.mpcheader-user-btn
            %li.mpcheader-user-signin
              = link_to "新規会員登録", new_user_path, class: "mpcheader-user-red"
            %li.mpcheader-user-login
              = link_to "ログイン", users_login_path
