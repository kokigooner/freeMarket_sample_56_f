    .mypage__container__box__content
      %section.mypage__container__box__content__icon
        %a.mypage__icon__box{href: ""}
          %figure
            %img{alt: "", height: "60", src: "//static.mercdn.net/images/member_photo_noimage_thumb.png", width: "60"}/
          %h2.mypage__user-name
            みね
          .mypage__user__info
            .mypage__user__info__value
              評価
              %span.mypage__value__num
                2
            .mypage__user__info__item
              商品数
              %span.mypage__item__num
