.signup-container
  = render partial: "users/signup-header"
  %main.signup__main
    .signup__main__content
      .signup__main__content__title
        %h2 新規会員登録
      .signup__form
        .signup__form__btns
          %a{href: "/users/signup/registration", class: "signup__form__btn signup__form__btn--mail"}
            メールアドレスで登録する
          %a{href: "/", class: "signup__form__btn signup__form__btn--facebook"}
            Facebookで登録する
          %a{href: "/", class: "signup__form__btn signup__form__btn--google"}
            Googleで登録する
  = render partial: "users/signup-footer"