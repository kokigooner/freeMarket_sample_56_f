.registration-container
  %header.registration-header
    %h1
      =link_to(root_path, class: "registration-header__logo") do
        = image_tag 'mercari_logo_horizontal', class: 'registration-header__logo__img'
    %nav.registration-header__progress-bar
      %ol
        %li
          会員情報
          .progress__status.progress__status--active
          .progress__bar.progress__bar--after.progress__bar--active
        %li
          電話番号認証
          .progress__bar.progress__bar--before.progress__bar--active
          .progress__status.progress__status--active
          .progress__bar.progress__bar--after.progress__bar--active
        %li.registration-header--active
          お届け先住所入力
          .progress__bar.progress__bar--before.progress__bar--active
          .progress__status.progress__status--active
          .progress__bar.progress__bar--after
        %li
          支払い方法
          .progress__bar.progress__bar--before
          .progress__status
          .progress__bar.progress__bar--after
        %li
          完了
          .progress__bar.progress__bar--before
          .progress__status
  %main.registration-main
    .registration-main__container
      %h2.registration-main__text 発送元・お届け先住所入力
      =form_for @address, url: users_signup_payment_path, method: :post, html: { class: "registration__form" } do |f|
        .registration__form__content
          .registration__form__group
            = f.label "お名前"
            %span.registration__form--require 必須
            = f.text_field :family_name, class: "registration__form__input", value: @family_name
            = f.text_field :first_name, class: "registration__form__input signup-address__input", value: @first_name
          .registration__form__group
            = f.label "お名前カナ"
            %span.registration__form--require 必須
            = f.text_field :family_name_kana, class: "registration__form__input", value: @family_name_kana
            = f.text_field :first_name_kana, class: "registration__form__input signup-address__input", value: @first_name_kana
          .registration__form__group
            = f.label :postal_code, "郵便番号"
            %span.registration__form--require 必須
            = f.text_field :postal_code, class: "registration__form__input", placeholder: "例) 123-4567", maxlength: "8"
          .registration__form__group
            = f.label :prefecture, "都道府県"
            %span.registration__form--require 必須
            .registration__form__select.registration__form__select--wide
              = f.select :prefecture, Address.prefectures.keys, class: "registration__form__input"
          .registration__form__group
            = f.label :minicipality, "市区町村"
            %span.registration__form--require 必須
            = f.text_field :minicipality, class: "registration__form__input", placeholder: "例) 横浜市緑区"
          .registration__form__group
            = f.label :address, "番地"
            %span.registration__form--require 必須
            = f.text_field :address, class: "registration__form__input", placeholder: "例) 青山1-1-1"
          .registration__form__group
            = f.label :building, "建物名"
            %span.registration__form--require.signup-address__tag--optional 任意
            = f.text_field :building, class: "registration__form__input", placeholder: "例) 柳ビル103"
          .registration__form__group
            = f.label :phone_number, "電話"
            %span.registration__form--require.signup-address__tag--optional 任意
            = f.phone_field :phone_number, class: "registration__form__input", placeholder: "例) 09012345678"
          = f.submit class: "signup__form__btn signup__form__btn--mail registration__form__next-btn", value: "次へ進む", data: { disable_with: "次へ進む" }
  = render partial: "users/signup-footer"