.registration-container
  %header.registration-header
    %h1
      %a(href="/" class="registration-header__logo")
        = image_tag 'mercari_logo_horizontal', class: 'registration-header__logo__img'
    %nav.registration-header__progress-bar
      %ol
        %li
          会員情報
          .progress__status.progress__status--active
          .progress__bar.progress__bar--after.progress__bar--active
        %li
          電話番号認証
          .progress__bar.progress__bar--before.progress__bar--active
          .progress__status.progress__status--active
          .progress__bar.progress__bar--after.progress__bar--active
        %li.registration-header--active
          お届け先住所入力
          .progress__bar.progress__bar--before.progress__bar--active
          .progress__status.progress__status--active
          .progress__bar.progress__bar--after
        %li
          支払い方法
          .progress__bar.progress__bar--before
          .progress__status
          .progress__bar.progress__bar--after
        %li
          完了
          .progress__bar.progress__bar--before
          .progress__status
  %main.registration-main
    .registration-main__container
      %h2.registration-main__text 発送元・お届け先住所入力
      =form_for :user, html: { class: "registration__form" } do |f|
        .registration__form__content
          .registration__form__group
            = f.label :name, "お名前"
            %span.registration__form--require 必須
            = f.text_field :family_name, class: "registration__form__input", value: "登録した苗字"
            = f.text_field :first_name, class: "registration__form__input signup-address__input", value: "登録した名前"
          .registration__form__group
            = f.label :name_kana, "お名前カナ"
            %span.registration__form--require 必須
            = f.text_field :family_name_kana, class: "registration__form__input", value: "登録した苗字(カナ)"
            = f.text_field :first_name_kana, class: "registration__form__input signup-address__input", value: "登録した名前(カナ)"
          .registration__form__group
            = f.label :postcode, "郵便番号"
            %span.registration__form--require 必須
            = f.text_field :postcode, class: "registration__form__input", placeholder: "例) 123-4567"
          .registration__form__group
            = f.label :prefecture, "都道府県"
            %span.registration__form--require 必須
            .registration__form__select.registration__form__select--wide
              = select_tag "prefecture", options_for_select({北海道:1,青森県:2,岩手県:3,宮城県:4,秋田県:5,山形県:6,福島県:7,茨城県:8,栃木県:9,群馬県:10,埼玉県:11,千葉県:12,東京都:13,神奈川県:14,新潟県:15,富山県:16,石川県:17,福井県:18,山梨県:19,長野県:20,岐阜県:21,静岡県:22,愛知県:23,三重県:24,滋賀県:25,京都府:26,大阪府:27,兵庫県:28,奈良県:29,和歌山県:30,鳥取県:31,島根県:32,岡山県:33,広島県:34,山口県:35,徳島県:36,香川県:37,愛媛県:38,高知県:39,福岡県:40,佐賀県:41,長崎県:42,熊本県:43,大分県:44,宮崎県:45,鹿児島県:46,沖縄県:47}), class:"registration__form__input"
          .registration__form__group
            = f.label :city, "市区町村"
            %span.registration__form--require 必須
            = f.text_field :city, class: "registration__form__input", placeholder: "例) 横浜市緑区"
          .registration__form__group
            = f.label :house_number, "番地"
            %span.registration__form--require 必須
            = f.text_field :house_number, class: "registration__form__input", placeholder: "例) 青山1-1-1"
          .registration__form__group
            = f.label :building_name, "建物名"
            %span.registration__form--require.signup-address__tag--optional 任意
            = f.text_field :building_name, class: "registration__form__input", placeholder: "例) 柳ビル103"
          .registration__form__group
            = f.label :phone, "電話"
            %span.registration__form--require.signup-address__tag--optional 任意
            = f.phone_field :phone, class: "registration__form__input", placeholder: "例) 09012345678"
          = f.submit class: "signup__form__btn signup__form__btn--mail registration__form__next-btn", value: "次へ進む"
  = render partial: "users/signup-footer"