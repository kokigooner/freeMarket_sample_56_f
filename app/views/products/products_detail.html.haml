          %tr
            %th 出品者
            %td
              = link_to 'JP',"/"
              %div
                .product-user-ratings
                  %i.icon-good
                    %i.far.fa-smile-wink
                  %span 87
                .product-user-ratings
                  %i.icon-normal
                    %i.far.fa-meh
                  %span 7
                .product-user-ratings
                  %i.icon-bad
                    %i.far.fa-frown-open 
