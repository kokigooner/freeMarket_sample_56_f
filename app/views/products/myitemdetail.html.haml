.default-container 
  = render  'shared/header'
  %section.product-box-container.large-single-container
    %h1.product-name MacBook エアー
    .product-main-content.clearfix
      .product-photo
        .owl-carousel.owl-loaded.owl-drag
          .owl-stage-outer
            .owl-stage{"style": "#{'left: 0px width: 900px'}"}  
              .owl-product.active{"style": "#{'width: 300px'}"} 
                .owl-product-inner.is-higher-height
                  = image_tag "#{@product.images.find(1)[:image]}", class: 'owl-lazy',width: "300" ,hight: "300"
          .owl-dots
            - @product.images.each do |thumbnail|
              .owl-dot
                .owl-dot-inner
                  = image_tag "#{thumbnail.image}", class: 'owl-lazy',width: "60" ,hight: "60"
      %table.product-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              = link_to "#{@product.product_name}",
              %div
                .product-user-ratings
                  %i.icon-good
                    %i.far.fa-smile-wink
                  %span ??
                .product-user-ratings
                  %i.icon-normal
                    %i.far.fa-meh
                  %span ??
                .product-user-ratings
                  %i.icon-bad
                    %i.far.fa-frown-open 
                  %span ??
          %tr
            %th カテゴリー
            %td
              %div
              = link_to "未実装","/"
              %div
              = link_to "> 未実装","/"
              %div
              = link_to "> 未実装","/"
          %tr
            %th ブランド
            %td 
              = link_to "未実装","/"
          %tr
            %th 商品の状態
            %td 
              = @product.condition
          %tr
            %th 配送料の負担
            %td 
              = @product.delivery_charge
          %tr
            %th 配送の方法
            %td 
              = @product.delivery_way
          %tr
            %th 配送元地域
            %td 
              = link_to "??????","/"
          %tr
            %th 発送日の目安
            %td
              = @product.delivery_date
    %div.product-price-box.text-center
      %span.product-price.bold
        = "¥#{@product.price}"
      %span.product-tax
        (税込)
      %span.product-shipping-fee
        送料込み
      - if user_signed_in?
        - unless current_user.id == @product.user_id
          = link_to "購入画面に進む",  destroy_user_session_path,class: "product-buy-btn", method: :delete
      - else 
        = link_to "購入画面に進む",  destroy_user_session_path,class: "product-buy-btn", method: :delete
    -# %a.product-btn-client
    -#   %div{"data-client": "#{'visible'}"}
    -#     購入画面に進む
    -#     =link_to "購入画面に進む", myprofile_path(@product.id)
      -# %div.product-action-text{"data-toggle": "#{'open-app'}","data-url-scheme": "#{'mercari://'}","data-action": "#{'product/openDetail'}",'data-key': "#{'id=aaaaaaaa'}","data-paly-id": "#{"com.kouzoh.mercari"}","data-adjust-url": "http://app.adjust.io/xio2ii?campaign=iOS&adgroup=items.buy_button1aaaaaa"}
      -#   アプリで購入　　←※スマホ用
    %div.product-description.f14
      =simple_format "#{@product.description}", class:'product-description-inner'
    %div.product-button-container.clearfix
      %div.product-button-left
        %button.product-button.product-button-like{"name": "like!","data-toggle": "like","data-id": "#{"xxxxxxxx"}","data-ga":"#{"element"}","dara-ga-category": "#{'LIKE'}"}
          %i.icon-like-border
            = image_tag "sample_heart.png",width: "15" ,hight: "15"
            %span
              良いね！
            %span.fade-in-down{"data-num":"#{"like"}"}
              0
        %button.product-button.product-button-report.clearfix{"data-modal":"#{"report-product"}","data-open":"#{"modal"}"}
          %i.icon-flag
            = image_tag "sample_flag.png",width: "15" ,hight: "15"
            %span
              不適切な商品の報告
        %input{"type":"#{"hidden"}","name":"#{"like_add_url"}","value":"#{""}"}
        %input{"type":"#{"hidden"}","name":"#{"like_del_url"}","value":"#{""}"}
        %input{"type":"#{"hidden"}","name":"#{"__csrf_value"}","value":"#{""}"}
      %div.product-button-right
        %i.icon-lock
          あんしん・あんぜんへの取り込み
  %div.product-detail-message
    %div.message-container
      %div.message-content
        = form_for "",html: { class: "message-form" },local: true do |f|
          %p
            相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
          = f.text_area :message, class: 'textarea-default'
          = f.submit "コメントする", {class: "message-submit btn-default btn-gray"} 


  = render 'shared/bread-crumbs'
  = render  'shared/footer'
